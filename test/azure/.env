# Azure Authentication
# Set your Azure subscription ID (required)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Test Configuration
TEST_REGION=westus2


# Stage Skip Configuration (Optional)
# In order skip any of the following stages uncomment(set) the corresponding variable. Test will skip the stage when env var is Set.
# In order to run the particular stage comment(unset) the corresponding variable.


# test will try to use latest existing network in the following two scenarios
# 1. if SKIP_setup_network is unset, and USE_EXISTING_NETWORK is set
# 2. if SKIP_setup_network is set
# USE_EXISTING_NETWORK=true

# SKIP_setup_network=true
# SKIP_cleanup_network=true

# ================== Materialize Consolidated Stage - Disk Enabled =================
# Complete Materialize stack (AKS + Database + Materialize) with disk enabled

# SKIP_testDiskEnabled=true
# SKIP_cleanup_testDiskEnabled=true

# ================== Materialize Consolidated Stage - Disk Disabled =================
# Complete Materialize stack (AKS + Database + Materialize) with disk disabled

# SKIP_testDiskDisabled=true
# SKIP_cleanup_testDiskDisabled=true


# test will try to use latest existing network in the following two scenarios
# 1. if SKIP_setup_network is unset, and USE_EXISTING_NETWORK is set (this is when the network has some issue during apply and you want to re-apply the fixes instead of creating a new one)
# 2. if SKIP_setup_network is set
# USE_EXISTING_NETWORK=true

# Materialize Configuration (Optional)
# MATERIALIZE_LICENSE_KEY=your-license-key-here

# AWS Credentials for S3 Remote Backend (Required when TF_TEST_REMOTE_BACKEND=true)
# These credentials are used by Terraform to access S3 for remote state storage
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_SESSION_TOKEN=your_session_token  # Optional, for temporary credentials

# S3 Remote Backend Configuration (Optional)
# Enable remote state storage in S3 for test runs
# TF_TEST_REMOTE_BACKEND=true
# TF_TEST_S3_BUCKET=your-terraform-state-bucket
# TF_TEST_S3_REGION=us-west-2
# TF_TEST_S3_PREFIX=test-runs  # Optional, default: "test-runs"
